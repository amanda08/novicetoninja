<%= provide(:page_title, 'Log Activity') %>
<h1>Log activity</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@activity) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :link %>
      <%= f.text_field :link %>

      <%= f.label :xp %>
      <%= f.number_field :xp %>

      <% current_user.goals.each do |goal| %>
        <%= check_box_tag "activity[goal_ids][]", goal.id %>
        <%= goal.content %><br/>
      <% end %>

      <div style="text-align: center;">
        <%= f.submit "Add activity", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>